{
    "openapi": "3.0.0",
    "info": {
      "title": "E-Commerce API",
      "version": "1.0.0",
      "description": "API for user management, products, carts, and orders in the e-commerce platform."
    },
    "paths": {
      "/api/v1/users/register/": {
        "post": {
          "summary": "Register a new user",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string" },
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "first_name": { "type": "string" },
                    "last_name": { "type": "string" }
                  },
                  "required": ["username", "email", "password", "first_name", "last_name"]
                }
              }
            }
          },
          "responses": {
            "201": { "description": "User registered successfully" }
          }
        }
      },
      "/api/v1/users/login/": {
        "post": {
          "summary": "Login a user",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": { "type": "string" },
                    "password": { "type": "string" }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": {
            "200": { "description": "Login successful, returns JWT" }
          }
        }
      },
      "/api/v1/users/{id}/": {
        "get": {
          "summary": "Get user profile by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "200": { "description": "User profile data" }
          }
        },
        "put": {
          "summary": "Update user profile",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string" },
                    "email": { "type": "string" },
                    "first_name": { "type": "string" },
                    "last_name": { "type": "string" },
                    "address": { "type": "string" },
                    "phone_number": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "200": { "description": "User profile updated successfully" }
          }
        },
        "delete": {
          "summary": "Delete user profile",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "204": { "description": "User deleted successfully" }
          }
        }
      },
      "/api/v1/products/": {
        "get": {
          "summary": "Get all products",
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "200": { "description": "List of all products" }
          }
        },
        "post": {
          "summary": "Add a new product (multiple file uploads)",
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "price": { "type": "number" },
                    "stock": { "type": "integer" },
                    "category": { "type": "string" },
                    "images": {
                      "type": "array",
                      "items": { "type": "string", "format": "binary" }
                    }
                  },
                  "required": ["name", "price", "stock", "category", "images"]
                }
              }
            }
          },
          "responses": {
            "201": { "description": "Product created successfully" }
          }
        }
      },
      "/api/v1/products/{id}/": {
        "get": {
          "summary": "Get product by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "200": { "description": "Product data" }
          }
        },
        "put": {
          "summary": "Update product details",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "price": { "type": "number" },
                    "stock": { "type": "integer" },
                    "category": { "type": "string" },
                    "images": {
                      "type": "array",
                      "items": { "type": "string", "format": "binary" }
                    }
                  },
                  "required": ["name", "price", "stock", "category", "images"]
                }
              }
            }
          },
          "responses": {
            "200": { "description": "Product updated successfully" }
          }
        },
        "delete": {
          "summary": "Delete a product",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "204": { "description": "Product deleted successfully" }
          }
        }
      },
      "/api/v1/cart/": {
        "post": {
          "summary": "Add product to cart",
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "product": { "type": "integer" },
                    "quantity": { "type": "integer" }
                  },
                  "required": ["product", "quantity"]
                }
              }
            }
          },
          "responses": {
            "201": { "description": "Product added to cart" }
          }
        },
        "get": {
          "summary": "Get cart contents",
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "200": { "description": "Cart data" }
          }
        }
      },
      "/api/v1/cart/{id}/": {
        "delete": {
          "summary": "Remove product from cart",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "integer" }
            },
            {
              "name": "Authorization",
              "in": "header",
              "required": true,
              "schema": { "type": "string" },
              "example": "Bearer <JWT>"
            }
          ],
          "responses": {
            "204": { "description": "Product removed from cart" }
          }
        }
      },
        "/api/v1/orders/": {
        "get": {
            "summary": "Get all orders (admin only)",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "200": { "description": "List of all orders" }
            }
        },
        "post": {
            "summary": "Create a new order",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "shipping_address": { "type": "string" },
                    "cart_items": {
                        "type": "array",
                        "items": { "type": "integer" }
                    }
                    },
                    "required": ["shipping_address", "cart_items"]
                }
                }
            }
            },
            "responses": {
            "201": { "description": "Order created successfully" }
            }
        }
        },
        "/api/v1/orders/{id}/": {
        "get": {
            "summary": "Get order details by ID",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "200": { "description": "Order details" }
            }
        },
        "put": {
            "summary": "Update an order (admin only)",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "status": { "type": "string" },
                    "tracking_number": { "type": "string" }
                    },
                    "required": ["status"]
                }
                }
            }
            },
            "responses": {
            "200": { "description": "Order updated successfully" }
            }
        },
        "delete": {
            "summary": "Delete an order (admin only)",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "204": { "description": "Order deleted successfully" }
            }
        }
        },
        "/api/v1/payments/": {
        "post": {
            "summary": "Make a payment",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "order_id": { "type": "integer" },
                    "amount": { "type": "number" },
                    "payment_method": { "type": "string", "example": "ADA" }
                    },
                    "required": ["order_id", "amount", "payment_method"]
                }
                }
            }
            },
            "responses": {
            "201": { "description": "Payment processed successfully" }
            }
        }
        },
        "/api/v1/payments/{id}/": {
        "get": {
            "summary": "Get payment details by ID",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "200": { "description": "Payment details" }
            }
        }
        },
        "/api/v1/reviews/": {
        "get": {
            "summary": "Get all reviews",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "200": { "description": "List of all reviews" }
            }
        },
        "post": {
            "summary": "Add a new review",
            "parameters": [
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "product_id": { "type": "integer" },
                    "rating": { "type": "integer", "example": 5 },
                    "comment": { "type": "string" }
                    },
                    "required": ["product_id", "rating"]
                }
                }
            }
            },
            "responses": {
            "201": { "description": "Review added successfully" }
            }
        }
        },
        "/api/v1/reviews/{id}/": {
        "get": {
            "summary": "Get review details by ID",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "200": { "description": "Review details" }
            }
        },
        "put": {
            "summary": "Update a review",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "rating": { "type": "integer", "example": 5 },
                    "comment": { "type": "string" }
                    }
                }
                }
            }
            },
            "responses": {
            "200": { "description": "Review updated successfully" }
            }
        },
        "delete": {
            "summary": "Delete a review",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "schema": { "type": "integer" }
            },
            {
                "name": "Authorization",
                "in": "header",
                "required": true,
                "schema": { "type": "string" },
                "example": "Bearer <JWT>"
            }
            ],
            "responses": {
            "204": { "description": "Review deleted successfully" }
            }
        }
        }
    }
}
    

  